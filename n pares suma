// npares.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main() 
{
int i,n,suma;
cout <<" poner n numeros a sumar: ";
cin >> n;
suma=0;
for(i=0;i<=n;i++)
suma = suma + (2*i);
cout<<"la suma de los n primeros numeros pares es: "<<suma<<endl;
getch();
}
