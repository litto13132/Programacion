#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	float base,altura,area;
    cout << "poner la base: "<<endl;
	cin >> base;
	cout << "poner la altura: "<<endl;
	cin>> altura;
	area=base*altura;
	cout<< "el area del paralelogramo es: "<<endl<<area;
	getch();
}

Proceso areadelparalelogramo
	Escribir "poner la base: ";
	Leer b;
	Escribir "poner la altura: ";
	Leer h;
	area=b*h;
	Escribir "el area del paralelogramo es: ",area;
FinProceso
