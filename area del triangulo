// area del triangulo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	float base,altura,area;
    cout << "poner la base: "<<endl;
	cin >> base;
	cout << "poner la altura: "<<endl;
	cin >> altura;
	area=(base*altura)/2;
	cout<< "el area del triangulo es: "<<endl<<area;
	getch();
}

Proceso areadelparalelogramo
	Escribir "poner la base: ";
	Leer b;
	Escribir "poner la altura: ";
	Leer h;
	area=(b*h)/2;
	Escribir "el area del triangulo es: ",area;
FinProceso
