		Escribir "precio 5: "
		Leer precio5
		precio5 <-precio5-(precio5*0.20)
		Escribir "El descuento total es: ", precio1+precio2+precio3+precio4+precio5
	FinSi
	Si cantidad = 6 Entonces
		Escribir "precio 1: "
		Leer precio1
		precio1 <-precio1-(precio1*0.30)
		Escribir "precio 2: "
		Leer precio2
		precio2 <-precio2-(precio2*0.20)
		Escribir "precio 3: "
		Leer precio3
		precio3 <-precio3-(precio3*0.10)
		Escribir "precio 4: "
		Leer precio4
		precio4 <-precio4-(precio4*0.20)
		Escribir "precio 5: "
		Leer precio5
		precio5 <-precio5-(precio5*0.20)
		Escribir "precio 6: "
		Leer precio6
		precio6 <-precio6-(precio6*0.20)
		Escribir "El descuento total es: ", precio1+precio2+precio3+precio4+precio5+precio6
	FinSi
	Si cantidad > 6 Entonces
		Escribir "No puede comprar mas de 6 productos."
	FinSi
FinProceso

