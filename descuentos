					cin >> p5;
					dcto5 = p5 - (p5 * 0.2);
					cout << "\nDescuento del producto 5 es: " << dcto5 << endl << endl;

					total2 = dcto1 + dcto2 + dcto3 + dcto4 + dcto5;
					cout << "El total de su compra es: " << total2 << endl;
