#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	float radio,area;
    cout << "poner el radio: "<<endl;
	cin >> radio;
	area=3.1416*radio*radio;
	cout<< "el area del circulo es: "<<endl<<area;
	getch();
}

Proceso areadelcirculo
	Escribir "poner el radio: ";
	Leer r;
	area=3.1416*r*r;
	Escribir "el area del circulo es: ",area;
FinProceso
